<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jarvis.ui.MainViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Firewall Rules">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TableView fx:id="rulesTable" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="colRuleId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colRuleType" prefWidth="150.0" text="Type" />
                        <TableColumn fx:id="colRuleValue" prefWidth="350.0" text="Value" />
                        <TableColumn fx:id="colRuleEnabled" prefWidth="100.0" text="Enabled" />
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Button onAction="#handleAddRule" text="Add Rule..." />
                        <Button onAction="#handleDeleteRule" text="Delete Selected Rule" />
                    </children>
                </HBox>
                <Label text="Live Event Logs">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <ListView fx:id="logListView" prefHeight="250.0" />
            </children>
        </VBox>
    </center>
</BorderPane>